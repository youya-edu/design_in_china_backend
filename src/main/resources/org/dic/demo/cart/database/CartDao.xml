<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.dic.demo.cart.database.CartDao">
  <select id="getCartByUserId" resultType="CartProduct">
    select *
    from cart
    where owner_id = #{userId}
  </select>
  <insert id="addProductToCart" parameterType="CartProduct">
    insert into cart (owner_id, product_id, quantity)
    values (#{ownerId}, #{productId}, #{quantity})
  </insert>
</mapper>
